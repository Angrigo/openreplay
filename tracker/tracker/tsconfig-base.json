    "rootDir": "src",
    "outDir": "build",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "target": "es2020",
    "module": "es6",
    "moduleResolution":  "node",
    "esModuleInterop": true,
  },
  "exclude": ["**/*.test.ts"]
}
